# Start a few applications

# emacs
exec i3-msg 'focus output left; exec edit.sh'

for_window [title="emacs_scratchpad"] floating enable, move to scratchpad, border 10px
exec edit.sh --eval '(progn (set-frame-name "emacs_scratchpad") (setq default-frame-alist (quote ((width  . 80) (height . 20)))))'

# screen lock
exec xautolock -time 15 -locker 'lock.sh'
bindsym $mod+Shift+l exec "lock.sh"

# daemons
exec insync start

