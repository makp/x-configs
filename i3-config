# -*-conf-*-
# i3 config file (v4)  /home/makmiller/.i3/config
# Maybe I could use mod+shift to workspace-related operations; and
# mod+control for within-workspace operations

exec --no-startup-id startconky.sh

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
font pango:DejaVu Sans Mono 10
# If you need a lot of unicode glyphs or right-to-left text rendering,
# you should instead use pango for rendering and chose a FreeType
# font, such as: font pango:DejaVu Sans Mono 10

set $mod Mod4
set $meta Mod1

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# color defines for zenburn styled i3 (from i3 FAQ)
set $bg     #2c2c2e
set $fg     #9f9f9f
set $hi     #efef8f
set $ac     #a0afa0
set $tx     #040404
set $ia     #8f8f8f
set $be     #8faf9f
set $yw     #ccdc90
set $gn     #88b090
set $rd     #e89393

# set some nice colors      border     background  text
client.focused              $ac        $ac         $tx
client.unfocused            $bg        $bg         $ia
client.focused_inactive     $bg        $bg         $ac
client.urgent               $rd        $rd         $tx

# start a terminal
bindsym $mod+u exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+c kill

# start dmenu
# i3-dmenu-desktop is a wrapper around dmenu which only displays applications
# shipping a .desktop file.
bindsym $mod+p exec --no-startup-id i3-dmenu-desktop
# bindsym $mod+p exec dmenu_run

# change focus
bindsym $mod+b focus left
bindsym $mod+n focus down
bindsym $mod+t focus up
bindsym $mod+f focus right
bindsym $mod+h focus output right

# alternatively, you can use the cursor keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Control+b move left 150px
bindsym $mod+Control+n move down 150px
bindsym $mod+Control+t move up 150px
bindsym $mod+Control+f move right 150px

# alternatively, you can use the arrow keys
bindsym $mod+Control+Left move left 
bindsym $mod+Control+Down move down 
bindsym $mod+Control+Up move up
bindsym $mod+Control+Right move right

# split in horizontal orientation
bindsym $mod+$meta+h split h

# split in vertical orientation
bindsym $mod+$meta+d split v

# enter fullscreen mode for the focused container
bindsym $mod+space fullscreen; exec xautolock -toggle
# bindsym $mod+$meta+space fullscreen; exec xdotool mousemove --sync 1920 0

popup_during_fullscreen smart

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+l layout tabbed
bindsym $mod+z layout toggle split

# toggle tiling / floating
bindsym $mod+Return floating toggle

# change focus between tiling / floating windows
bindsym $mod+minus focus parent

# focus the parent container
bindsym $mod+c focus mode_toggle

# 
force_focus_wrapping yes

# focus the child container
bindsym $mod+g focus child

# move to next workspace
bindsym $mod+Tab workspace next
bindsym $mod+r workspace next_on_output

# rename workspace
bindsym $mod+Shift+r exec i3-input -F 'rename workspace to "%s"' -P 'Novo nome: '

# Applications
bindsym $mod+Control+w exec google-chrome-stable
bindsym $mod+w [class="Google-chrome"] scratchpad show

for_window [class="Mathematica"] floating enable

bindsym $mod+Control+x exec zotero
bindsym $mod+x [class="Zotero"] scratchpad show

bindsym $mod+Control+m exec urxvt
for_window [instance="urxvt_scratchpad"] floating enable, move to scratchpad, border none
exec urxvt -name urxvt_scratchpad -g 78X14+600+20 -e zsh -c 'tmux attach -d'
bindsym $mod+m [instance="urxvt_scratchpad"] scratchpad show

bindsym $mod+Control+v exec edit.sh
bindsym $mod+v [class="Emacs"] scratchpad show

bindsym $mod+0 [instance="^(?!urxvt_scratchpad)" class="^(?!Emacs)(?!Zathura)(?!Google-chrome)"] scratchpad show
bindsym $mod+$meta+0 scratchpad show
bindsym $mod+Shift+0 move container to scratchpad

# bindsym --release $mod+period exec --no-startup-id pdf-up.sh
# bindsym --release $mod+e      exec --no-startup-id pdf-down.sh

# volume control
bindsym XF86AudioLowerVolume exec "amixer sset Master 1%- unmute && /home/makmiller/scripts/myscripts/volume.sh" 
#(0            , 0x1008ff11)
bindsym $mod+F2 exec "amixer sset Master 1%- unmute && /home/makmiller/scripts/myscripts/volume.sh" 


bindsym XF86AudioRaiseVolume exec "amixer sset Master 1%+ unmute && /home/makmiller/scripts/myscripts/volume.sh"
# (0            , 0x1008ff13)
bindsym $mod+F3 exec "amixer sset Master 1%+ unmute && /home/makmiller/scripts/myscripts/volume.sh"

bindsym XF86AudioMute exec "amixer sset Master toggle"
# (0            , 0x1008ff12)
bindsym $mod+F1 exec "amixer sset Master toggle"

